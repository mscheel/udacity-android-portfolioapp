<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_centerHorizontal="true"
            android:text="@string/my_nanondegree_apps_header"
            android:id="@+id/textView"
            android:layout_alignParentTop="true" />

    <Button
            style="@style/AppButtonMaterial"
            android:id="@+id/button_spotify"
            android:layout_below="@id/textView"
            android:text="@string/spotify_streamer_button_label"
            android:onClick="buttonClick"/>

    <Button
            style="@style/AppButtonMaterial"
            android:text="@string/scores_app_button_label"
            android:id="@+id/button_scores"
            android:layout_below="@id/button_spotify"
            android:onClick="buttonClick"/>

    <Button
            style="@style/AppButtonMaterial"
            android:text="@string/library_app_button_label"
            android:id="@+id/button_library"
            android:layout_below="@id/button_scores"
            android:onClick="buttonClick"/>

    <Button
            style="@style/AppButtonMaterial"
            android:text="@string/build_it_bigger_button_label"
            android:id="@+id/button_bigger"
            android:layout_below="@id/button_library"
            android:onClick="buttonClick"/>

    <Button
            style="@style/AppButtonMaterial"
            android:text="@string/xyz_reader_button_label"
            android:id="@+id/button_xyz"
            android:layout_below="@id/button_bigger"
            android:onClick="buttonClick"/>

    <Button
            style="@style/AppButtonMaterialTwo"
            android:text="@string/capstone_button_label"
            android:id="@+id/button_capstone"
            android:layout_below="@id/button_xyz"
            android:onClick="buttonClick"/>

</RelativeLayout>
